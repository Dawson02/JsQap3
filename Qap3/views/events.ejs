<html lang="en">
<head>
    <%- include('./partials/style.ejs') %>
    <%- include('./partials/head.ejs') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Events</title>
</head>
<body>
    <div class="eventPage">
        <%- include('./partials/nav.ejs') %>
        <h1>All Events</h1>
        <ul>
            <% if (events && events.length > 0) { %>
                <% events.forEach(event => { %>
                    <li>
                        <h3><%= event.event_name %></h3>
                        <p>Date: <%= event.event_date %></p>
                        <p>Description: <%= event.description %></p>
                        <a class="eventEditBtn" href="/events/<%= event.event_id %>/edit">Edit Event <%= event.event_id %></a>
                        <a class="eventDeleteBtn" href="/events/<%= event.event_id %>/delete">Delete Event <%= event.event_id %></a>
                    </li>
                    <br>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No events available.</p>
        <% } %>
        <a class="addNew" href="/events/Put">Add New Event</a>
        <%- include('./partials/foot.ejs') %>
    </div>
</body>
</html>