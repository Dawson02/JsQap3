<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/style.ejs') %>
    <%- include('./partials/head.ejs') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Event</title>
</head>
<body>
    <div class="eventEditPage">
        <%- include('./partials/nav.ejs') %>
        <h1>Edit Event</h1>
        <form action="/events/<%= locals.event_id %>?_method=PATCH" method="POST">
            <label for="eventName">Event Name:</label>
            <input type="text" id="eventName" name="event_name" value="<%= locals.even_name %>" required>
            <br>
            <label for="eventDate">Event Date:</label>
            <input type="date" id="eventDate" name="event_date" value="<%= locals.event_date %>" required>
            <br>
            <label for="eventDescription">Description:</label>
            <textarea id="eventDescription" name="description" rows="4" cols="50" required><%= locals.description %></textarea>
            <br>
            <button type="submit">Update Event</button>
        </form>
        <a href="/events">Cancel</a>
        <%- include('./partials/foot.ejs') %>
    </div>
</body>
</html>
